<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D5C4C4"
    android:backgroundTint="#AE9D77"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image"
                android:layout_width="292dp"
                android:layout_height="127dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/textViewDeputyName"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:text="Prénom Nom"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textViewDeputyNaissance"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Date de naissance"
                android:textSize="19dp" />

            <ImageView
                android:id="@+id/imageViewDeputy"
                android:layout_width="142dp"
                android:layout_height="146dp"
                android:layout_gravity="center"
                android:rotationY="8"
                android:src="@mipmap/ic_launcher" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textViewDeputyAdrr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adresse"
        android:textSize="19dp" />

    <TextView
        android:id="@+id/textViewDeputyGroupe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Groupe" />

    <TextView
        android:id="@+id/textViewDeputyEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="email@toto.fr"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textViewDeputyCollabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="collabs"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textViewDeputyCirco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dept, Circonscription"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textViewDeputyResp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Responsabilité"
        android:textSize="16sp" />

    <ListView
        android:id="@+id/list_view_historique"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>